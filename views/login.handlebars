<div class="row">

  {{!-- login form --}}
  <div class="col-md-6">
    <h2>Login</h2>
    <form class="form login-form">
      <div class="form-group mb-3">
        <label for="email-login" class="form-label">Email</label>
        <input class="form-control form-input" type="email" id="email-login" />
      </div>

      <div class="form-group mb-3">
        <label for="password-login" class="form-label">Password</label>
        <input class="form-control form-input" type="password" id="password-login" />
      </div>
      <button type="submit" class="btn btn-primary" id="login-btn">Login</button>
    </form>
  </div>


  {{!-- signup form --}}
  <div class="col-md-6">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="form-group mb-3">
        <label for="name-signup">Username</label>
        <input class="form-control form-input" type="text" id="username-signup" />
      </div>
      <div class="form-group mb-3">
        <label for="email-signup" class="form-label">Email</label>
        <input class="form-control form-input" type="email" id="email-signup" />
      </div>
      <div class="form-group mb-3">
        <label for="password-signup" class="form-label">Password</label>
        <input class="form-control form-input" type="password" id="password-signup" />
      </div>
      <button type="submit" class="btn btn-primary" id="signup-btn">Sign Up</button>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
